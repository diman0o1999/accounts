<h1>Edite</h1>



<%= simple_form_for @user,method: 'put',html: { multipart: true }, url: user_path do |f| %>
  <%= f.error_notification %>

  <%= f.input :nickname %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.file_field :image %>
  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>